{
  "extends": ["config:js-app", ":rebaseStalePrs", "schedule:weekends"],
  "packageRules": [
    {
      "groupName": "Development dependencies",
      "groupSlug": "dev-dependencies",
      "packageNames": ["@vue/test-utils"],
      "packagePatterns": [
        "eslint",
        "jest",
        "prettier",
        "puppeteer",
        "bundlesize"
      ]
    },
    {
      "groupName": "Non-major dependencies",
      "groupSlug": "non-major-dependencies",
      "excludePackagePatterns": [
        "eslint",
        "jest",
        "prettier",
        "puppeteer",
        "bundlesize"
      ],
      "updateTypes": ["patch", "minor"]
    }
  ]
}
