{
  "extends": ["config:base"],
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint packages",
      "schedule": ["after 1am on saturday"]
    },
    {
      "packagePatterns": ["^pug"],
      "groupName": "pug packages",
      "schedule": ["after 1am on saturday"]
    },
    {
      "packagePatterns": ["^jest"],
      "groupName": "jest packages",
      "schedule": ["after 1am on saturday"]
    },
    {
      "packagePatterns": ["^babel"],
      "groupName": "babel packages",
      "schedule": ["after 1am on saturday"]
    }
  ]
}
